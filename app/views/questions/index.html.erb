<h1> Questions </h1>

<div>
<% @questions.each do |question| %>
  <%=question.vote_count%><div class = question-link><%=link_to question.title, question_path(question.id) %></div>
  <br>
  <p><%= form_for @vote, url: {action:"create", controller: "votes"} do |f| %>
    <%= hidden_field_tag :voteable_type, "Question" %>
    <%= hidden_field_tag :voteable_id, question.id %>
    <%= hidden_field_tag :vote_status, true %>

    <%= f.submit "UpVote"%>
  <%end%>
</p>

<p><%= form_for @vote, url: {action:"create", controller: "votes"} do |f| %>
    <%= hidden_field_tag :voteable_type, "Question" %>
    <%= hidden_field_tag :voteable_id, question.id %>
    <%= hidden_field_tag :vote_status, false %>

    <%= f.submit "DownVote"%>
  <%end%>
<% end %>
</div>
